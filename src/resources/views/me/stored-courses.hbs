<div class="mt-5 mt-5">
    <div class="row shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        {{#each Course}}
        <div class="col-sm-6 col-lg-3 mt-5">
            <div class="card" style="width: 18rem;">
                <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text"> Tạo :{{this.createddAt}}</p>
                    <p class="card-text"> Sửa đổi :{{this.updatedAt}}</p>
                    <div class="config row">
                        <a href="/courses/{{this._id}}/edit" class="col"><button type="button"
                                class="btn btn-outline-primary  w-100">Sửa</button></a>
                        <a href="" class="col" data-bs-toggle="modal"
                            data-bs-target="#exampleModal" data-id={{this._id}}>
                            <button type="button" class="btn btn-outline-danger w-100">Xóa
                            </button>
                        </a>

                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
